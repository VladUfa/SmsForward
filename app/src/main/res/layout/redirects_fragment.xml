<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_width="match_parent">

    <ImageView
            android:src="@drawable/img_message_forward"
            android:layout_width="wrap_content"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="@string/redirects_info_automatically_redirect_sms_from"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/etSource"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="@string/redirects_info_to"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/etDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"/>

    <Button
            android:id="@+id/btnEnable"
            android:layout_width="wrap_content"
            android:text="@string/redirects_info_enable"
            android:layout_height="wrap_content"/>

</LinearLayout>